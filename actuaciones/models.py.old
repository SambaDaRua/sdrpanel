from django.db import models
from django.contrib.auth.models import User


class instrumentos(models.Model):
	nombre = models.CharField(max_length=10)
	numero = models.PositiveSmallIntegerField(blank=True)
	def __unicode__(self):
		return self.nombre

class samberos(models.Model):
	name = models.ForeignKey(User, unique=True)
	dni = models.CharField(max_length=10, blank=True)
	phone = models.CharField(max_length=9, blank=True)
	movil = models.CharField(max_length=9, blank=True)
	def __unicode__(self):
		return self.name

class contactos(models.Model):
	name = models.CharField(max_length=30)
	phone = models.CharField(max_length=9, blank=True)
	movil = models.CharField(max_length=9, blank=True)
	mail = models.CharField(max_length=30, blank=True)
	def __unicode__(self):
		return self.name

class actuaciones(models.Model):
	titulo = models.CharField(max_length=80)
	fecha = models.DateTimeField()
	descripcion = models.TextField()
	lugar = models.CharField(max_length=200)
	organizador = models.ManyToManyField(samberos)
	contacto = models.ManyToManyField(contactos)
	def __unicode__(self):
		return self.titulo
